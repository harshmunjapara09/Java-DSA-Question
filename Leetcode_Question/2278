class Solution {
    public int percentageLetter(String s, char letter) {
         int per = 0;
        int n = s.length();
        for (int i = 0; i < n; i++) {
            if(s.charAt(i) == letter){
                per++;
            }
        }
        int count = (per * 100 )/n;
        return count;
    }
}